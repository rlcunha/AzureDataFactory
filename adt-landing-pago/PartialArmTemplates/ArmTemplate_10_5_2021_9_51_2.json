						"userProperties": [],
						"typeProperties": {
							"dataset": {
								"referenceName": "ds_Excel",
								"type": "DatasetReference",
								"parameters": {
									"folder": "@pipeline().parameters.folder",
									"filename": "@{pipeline().parameters.tbName[0]}"
