							},
							"fieldList": [
								"exists"
							],
							"storeSettings": {
								"type": "AzureBlobFSReadSettings",
								"enablePartitionDiscovery": false
							}
						}
					},
					{
						"name": "CondicaoSeExisteArquivoExcel",
						"type": "IfCondition",
						"dependsOn": [
							{
								"activity": "GetTodosArquivosExcel",
								"dependencyConditions": [
